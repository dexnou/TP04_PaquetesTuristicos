    public static bool IngresarPaquete(string destinoSeleccionado, Paquete paquete)
    {
        if(DiccionarioPaquetes.ContainsKey(paquete)){ //aca en vez de ver la clave esta viendo el valor. tiene que ser al reves despues me fijo
            if(ListaDestinos.Contains(destinoSeleccionado)){
                Console.WriteLine("Ese destino no existe");
                return false;
            }else{ 
                DiccionarioPaquetes.Add(destinoSeleccionado, i);
                i++;
                return true;
            }
        }else{
            Console.WriteLine("NO hay paquete");
            return false;
        }
    }

}